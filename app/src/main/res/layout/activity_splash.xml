<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <FrameLayout
        android:id="@+id/splashFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <ImageView
            android:id="@+id/splashImage"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:src="@drawable/xmen_small"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/ic_d_point_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_d_circle"
            android:scaleType="fitCenter"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:id="@+id/ic_d_point_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_d_circle"
            android:scaleType="fitCenter"
            android:layout_gravity="right|top"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            />
        <ImageView
            android:id="@+id/ic_d_point_3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_d_circle"
            android:scaleType="fitCenter"
            android:layout_gravity="left|top"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            />
        <ImageView
            android:id="@+id/ic_d_point_4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_d_circle"
            android:scaleType="fitCenter"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            />
        <ImageView
            android:id="@+id/ic_d_point_5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_d_circle"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:paddingRight="70dp"
        android:layout_marginTop="36dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_marvel"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical|left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yut_nori"
            android:textColor="#f0f0f0"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="right|center_vertical"
            />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_provider"
        android:textColor="#999999"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="45dp"
        android:layout_gravity="bottom|center_horizontal"
        />

</FrameLayout>
