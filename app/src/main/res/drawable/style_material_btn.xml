<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/material_yellow_100"
                android:endColor="@color/material_yellow_700"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/material_grey_700" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/material_orange_100"
                android:startColor="@color/material_orange_700"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/material_grey_700" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/material_blue_grey_100"
                android:startColor="@color/material_blue_grey_700"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/material_grey_700" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>

</selector>